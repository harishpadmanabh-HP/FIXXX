<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".UserPostJobFrag">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
  <RelativeLayout
      android:layout_marginTop="50dp"
      android:padding="10dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <EditText
          android:textStyle="bold"
          android:id="@+id/jobtitle"
          android:layout_width="match_parent"
          android:layout_height="65dp"
          android:hint="JOB TITLE"
          android:textColorHint="#fff"
          android:padding="10dp"
          android:textSize="20dp"
          android:background="@drawable/rectedttxt"
          />
      <EditText
          android:textSize="20dp"
          android:maxLines="3"

          android:textAlignment="gravity"
          android:id="@+id/jobdesc"
          android:layout_below="@id/jobtitle"
          android:layout_width="match_parent"
          android:layout_height="265dp"
          android:hint="JOB Description"
          android:layout_marginTop="30dp"
          android:textColorHint="#fff"
          android:padding="10dp"
          android:background="@drawable/rectedttxt"
          />
      <EditText
          android:id="@+id/jobdeadline"
          android:layout_below="@id/jobdesc"
          android:layout_width="match_parent"
          android:layout_height="65dp"
          android:hint="JOB DeadLine"
          android:textColorHint="#fff"
          android:padding="10dp"
          android:textSize="20dp"

          android:layout_marginTop="30dp"
          android:background="@drawable/rectedttxt"
          />
      <EditText
          android:id="@+id/jobplace"
          android:layout_below="@id/jobdeadline"
          android:layout_width="match_parent"
          android:layout_height="65dp"
          android:hint="JOB Place"
          android:textColorHint="#fff"
          android:padding="10dp"
          android:textSize="20dp"


          android:layout_marginTop="30dp"
          android:background="@drawable/rectedttxt"
          />

      <Button
          android:id="@+id/postjob"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:layout_below="@id/jobplace"
          android:layout_alignParentEnd="true"
          android:layout_marginTop="41dp"
          android:layout_marginEnd="36dp"

          android:layout_marginBottom="20dp"
          android:background="#fff"
          android:text="POST JOB"
          android:textStyle="bold"
          android:translationZ="50dp" />
  </RelativeLayout>
    </ScrollView>
</FrameLayout>